    <section class="mainsec">
        <div class="slider1 container">
            <div class="col-lg-12 col-md-12 col-sm-12 topcon topcon1">
                <h2>Son videolar</h2>

            </div>
            <div class="owl-carousel drslide1">
                @foreach (var item in Model.Orders)
                {
                    <div class="owlcont1">

                        <video class="video owlim1 stopped">
                            <source src="~/Public/assets/images/@item.Videosrc" type="video/mp4" />
                        </video>
                        <div class="headicon2">
                            <div class="ellipse2">
                                <div class="ellipse1">
                                    <div class="polygon">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="galtext2">
                            <p>@item.Videotitle</p>
                        </div>
                    </div>
                }



            </div>
        </div>
        <div class="slider2 container">
            <div class="col-lg-12 col-md-12 col-sm-12 topcon topcon1">
                <h2>Oxşar məşhurlar</h2>

            </div>
            <div class="owl-carousel drslide2">
                @foreach (var item in Model.Celebrities)
                {
                    <div class="owlcont2">

                        <img src="~/Public/assets/images/@item.Photo" class="img-fluid">
                        <div class="galtext">
                            <h1>@item.Fullname</h1>
                            <p>@Model.catname</p>
                        </div>
                        <div class="btnprice">
                            <span>@item.Price AZN</span>
                        </div>

                    </div>
                }



            </div>
        </div>

    </section>
