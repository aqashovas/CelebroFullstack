<body>
    <div class="formappback">
        <div class="cancelform">
            <i class="fas fa-times"></i>
        </div>
        <div class="formapp1">
            <h2>Anketi doldurun,gerisi bizdə!</h2>
            @using (Html.BeginForm("index", "home", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-row">

                    <div class="form-group joinusform col-lg-6 col-md-6 col-sm-12">

                        <label for="exampleInputText2">Ad,soyad</label>
                        @Html.EditorFor(model => model.Celebrity.Fullname, new { htmlAttributes = new { @class = "form-control form-controlsu2", placeholder = "Ad,soyad" } })
                        @Html.ValidationMessageFor(model => model.Celebrity.Fullname, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group joinusform col-lg-6 col-md-6 col-sm-12">
                        <label for="inputState">Peşə</label>

                        @Html.DropDownList("CategoryID", new SelectList(ViewBag.Categories, "Id", "Name"), new { @class = "form-control form-controlsu2" })
                        @Html.ValidationMessageFor(model => model.Celebrity.CategoryID, "", new { @class = "text-danger" })

                    </div>
                    <div class="form-group joinusform col-lg-6 col-md-6 col-sm-12 ">
                        <label for="exampleInputEmail2">E-mail</label>
                        @Html.EditorFor(model => model.Celebrity.Mail, new { htmlAttributes = new { @class = "form-control  form-controlsu2", placeholder = "celebro@gmail.com" } })
                        @Html.ValidationMessageFor(model => model.Celebrity.Mail, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group  joinusform col-lg-6 col-md-6 col-sm-12">
                        <label for="exampleInputSocialmedia2">Sosial media hesabınız</label>
                        @Html.EditorFor(model => model.Celebrity.Socialmedia, new { htmlAttributes = new { @class = "form-control form-controlsu2", placeholder = "http:://instagram/celebro" } })
                        @Html.ValidationMessageFor(model => model.Celebrity.Socialmedia, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group joinusform col-lg-6 col-md-6 col-sm-12">
                        <label for="exampleInputSocialmedia2">Telefon nömrəniz</label>
                        @Html.EditorFor(model => model.Celebrity.Phone, new { htmlAttributes = new { @class = "form-control  form-controlsu2", placeholder = "+994 *** ** **" } })
                        @Html.ValidationMessageFor(model => model.Celebrity.Phone, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group joinusform col-lg-6 col-md-6 col-sm-12">
                        <label for="exampleInputText3">Qiymət gözləntiniz</label>
                        @Html.EditorFor(model => model.Celebrity.Price, new { htmlAttributes = new { @class = "form-control  form-controlsu2", placeholder = "Gözlədiyiniz qiyməti yazın" } })
                        @Html.ValidationMessageFor(model => model.Celebrity.Price, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <button type="submit" class="btn btn-primary btnjoinus">BİZƏ QOŞUL</button>

                    </div>
                </div>
            }


        </div>
    </div>
    <div class="formappback2">
        <div class="cancelform2">
            <i class="fas fa-times"></i>
        </div>
        <div class="formapp2">
            <form class="formch">
